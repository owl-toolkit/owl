{
    "defaults": {
        "reference": {
            "name": "ltl2tgba",
            "exec": [
                "ltl2tgba",
                "-H",
                "-f",
                "%f"
            ]
        },
        "data": [
            {
                "type": "file",
                "path": "formulas/base.ltl",
                "determinize": true
            },
            {
                "type": "file",
                "path": "formulas/regressions.ltl",
                "determinize": true
            },
            {
                "type": "file",
                "path": "formulas/check.ltl"
            },
            {
                "type": "random"
            }
        ]
    },
    "tests": {
        "ltl2ldba": "ltl2ldba",
        "ltl2ldba-nondet": "ltl2ldba#nondet-init",
        "ltl2ldba-vanilla": "ltl2ldba#no-eps",
        "ltl2ldba-guessf": "ltl2ldba#guess-f",
        "ltl2ldba-guessf-vanilla": "ltl2ldba#guess-f,no-eps",
        "ltl2ldba-gen-buchi": "ltl2ldba#gen-buchi",
        "ltl2ldba-gen-buchi-nondet": "ltl2ldba#gen-buchi,nondet-init",
        "ltl2ldba-gen-buchi-nondet-vanilla": "ltl2ldba#gen-buchi,nondet-init,no-eps",
        "ltl2ldba-gen-buchi-guessf": "ltl2ldba#gen-buchi,guess-f",
        "ltl2ldba-gen-buchi-guessf-vanilla": "ltl2ldba#gen-buchi,guess-f,no-eps",
        "ltl2dpa": "ltl2dpa",
        "ltl2dpa-vanilla": "ltl2dpa#no-eps",
        "ltl2dpa-parallel": "ltl2dpa#parallel",
        "ltl2da-parallel": "ltl2da#parallel",
        "nba2ldba": {
            "tools": [
                {
                    "name": "nba2ldba",
                    "exec": [
                        "ltl2tgba",
                        "--ba",
                        "-H",
                        "-f",
                        "%f",
                        "|",
                        "build/bin/nba2ldba",
                        "--optimisations=REMOVE_EPSILON_TRANSITIONS"
                    ]
                }
            ],
            "data": [
                {
                    "type": "file",
                    "path": "formulas/base.ltl",
                    "determinize": true
                }
            ]
        },
        "fgx2dga-vanilla": "fgx2dga#no-opt",
        "fgx2dga": "fgx2dga",
        "fgx2da-strict": {
            "tools": [
                "fgx2dga#strict",
                "fgx2dga#no-opt"
            ],
            "data": [
                {
                    "type": "file",
                    "path": "formulas/base.ltl"
                },
                {
                    "type": "file",
                    "path": "formulas/fgx.ltl"
                }
            ]
        }
    }
}

