<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
    "-//Puppy Crawl//DTD Suppressions 1.0//EN"
    "http://www.puppycrawl.com/dtds/suppressions_1_0.dtd">

<suppressions>
    <!-- Suppress everything for generated files -->
    <suppress files="owl[\\/]grammar[\\/]" checks=".*"/>
    <!-- Suppress everything for files from jhoafparser -->
    <suppress files="jhoafparser[\\/]extensions[\\/]" checks=".*"/>

    <!-- Suppress broken file -->
    <suppress files="owl[\\/]cinterface[\\/]CAutomaton" checks=".*"/>
    <suppress files="FG.*|.+2.+|.*DPA.*" checks="AbbreviationAsWordInName"/>

    <!-- Soon we will doc everything ... -->
    <suppress checks="JavadocMethod" files=".*"/>
    <!-- We avoid final modifier -->
    <suppress checks="VariableDeclarationUsageDistanceCheck" files=".*" />
    <!-- There are a ton of single-letter variables -->
    <suppress checks="ParameterName" files=".*"/>
    <suppress checks="LocalVariableName" files=".*"/>
</suppressions>
